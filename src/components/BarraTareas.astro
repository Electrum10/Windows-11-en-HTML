---
import Icon from "./icon.astro";
---

<div class="BarraTareas">
	<div class="Izquierda">
    <img src="" alt="Logo del tiempo de hoy" id="IconoTiempo">
    <div class="TemperaturaYDescripción">
      <p id="Temperatura">ssss</p>
      <p id="Descripción">saaa</p>
    </div>
  </div>

  <div class="Medio">
    <Icon name="Windows11" />
    <Icon name="Buscar" />
    <Icon name="RecuperarVentana" />
    <Icon name="Widgets" />
    <Icon name="Zoom" />
    <Icon name="Carpeta" />
    <Icon name="Microsoft" />
  </div>
  <div class="Derecha">
	<Icon name="FlechaArriba" />
    <Icon name="Wifi" />
	<Icon name="Sonido" />
  <div class="FechaYHora">
    <p id="Hora"></p>
    <p id="Fecha"></p>
  </div>
  </div>
</div>
<script src="../Logica.js"></script>
<style>
  .BarraTareas {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    height: 6%;
    position: absolute;
    background-color: rgba(128, 128, 128, 0.9);
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    overflow: hidden;
    font-family: Arial, Helvetica, sans-serif;
  }

  .Izquierda {
    display: flex;
    margin: 0px;
    align-items: center;
    padding-left: 0.7%;

    img {
      width: 40%;
    }
    #Temperatura{
      margin-top: 0px;
      margin-bottom: 0px;
    }
    #Descripción{
      margin-top: 0px;
      margin-bottom: 0px;
    }
  }

  .Derecha{
	display: flex;
  align-items: center;
  gap: 20px;
  padding-right: 1%;

  .FechaYHora {
  display: block;
  font-size: 12px;
  text-align: right;


  #Hora {
    margin: 0; /* ajusta el margen inferior */
  }

  #Fecha {
    margin: 0; /* ajusta el margen superior */
  }
}
  }
</style>
