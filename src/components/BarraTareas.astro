---
import Icon from "./icon.astro";
import Izquierda from "./BarraTareas/izquierda.astro";
import Medio from "./BarraTareas/medio.astro";
import Derecha from "./BarraTareas/derecha.astro";
---

<main class="BarraTareas">
 <Izquierda />
  <Medio />
  <Derecha />
</main>

<style>
  .BarraTareas {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    height: 6%;
    position: absolute;
    background-color: rgba(128, 128, 128, 0.9);
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    overflow: hidden;
    font-family: Arial, Helvetica, sans-serif;
  }
</style>
